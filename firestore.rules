rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado leia/escreva EM SUA PRÓPRIA sub-árvore
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Importante: Regra explícita para a sub-coleção 'audits'
      match /audits/{auditId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}